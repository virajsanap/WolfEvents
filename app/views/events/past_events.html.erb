
<h1>Past Events</h1>

<% @past_events.each do |event| %>
  <div>
    <h2><%= event.event_name %></h2>
    <p><strong>Category:</strong> <%= event.event_cat %></p>
    <p><strong>Date:</strong> <%= event.event_date %></p>
    <p><strong>Start Time:</strong> <%= event.event_start_time %></p>
    <p><strong>End Time:</strong> <%= event.event_end_time %></p>
    <p><strong>Ticket Price:</strong> <%= event.ticket_price %></p>
    <p><strong>Available Seats:</strong> <%= event.no_of_seats %></p>
    <p><strong>Room:</strong> <%= event.room.room_loc %></p>
  </div>
  <hr>
<% end %>

<%= link_to 'Back to Home', root_path, class: 'button-style' %>